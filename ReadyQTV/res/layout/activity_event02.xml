<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/event01_titlebar" >
    </FrameLayout>
    
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/main_backg01"
        android:layout_weight="0.86" >

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" 
            android:layout_marginTop="200dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" 
                android:background="@drawable/event_noticebar">
            </LinearLayout>
        </ScrollView>
        
        <Button
            android:id="@+id/button_event_enter"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="325dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/event_enter_button" />

        <Button
            android:id="@+id/button_event_back"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="325dp"
            android:layout_marginLeft="170dp"
            android:background="@drawable/event_back_button" />


    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ad1"
        android:orientation="vertical" >
    </LinearLayout>

</LinearLayout>