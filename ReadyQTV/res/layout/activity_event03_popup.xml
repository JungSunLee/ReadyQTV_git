<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="260dp"
    android:background="@drawable/event03_popup"
    android:orientation="vertical" >

        <Button
            android:id="@+id/button_event_popup_yes"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="180dp"
            android:layout_marginLeft="25dp"
            android:background="@drawable/event03_yes_button" />

        <Button
            android:id="@+id/button_event_popup_no"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="180dp"
            android:layout_marginLeft="165dp"
            android:background="@drawable/event03_no_button" />

        <TextView
            android:id="@+id/textView_popuptext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="30dp"
            android:text="@string/textView_popuptext"
            android:textAppearance="?android:attr/textAppearanceMedium" />


</FrameLayout>